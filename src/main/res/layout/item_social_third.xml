<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_recommend_third_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="标题"
        android:textSize="22sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/item_recommend_third_img1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@mipmap/btn_1"/>
        <ImageView
            android:id="@+id/item_recommend_third_img2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@mipmap/btn_1"
            android:layout_marginLeft="1dp"/>
        <ImageView
            android:id="@+id/item_recommend_third_img3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@mipmap/btn_1"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_recommend_third_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="内容"
        android:textSize="18sp" />

</LinearLayout>